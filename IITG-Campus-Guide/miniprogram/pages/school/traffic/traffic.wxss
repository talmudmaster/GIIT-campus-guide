/* miniprogram/pages/school/bus/bus.wxss */
page {
    background-color: white;
}

.card {
    margin: 20px;
}

.card-title {
    display: flex;
    align-items: center;
    flex-direction: row;
    border-bottom: 1px solid #b6b6b6;
    margin-bottom: 20px;
}

.card-title-img {
    height: 30px;
    width: 30px;
}

.card-title-font {
    color: #73a5d6;
    margin-left: 10px;
    /* margin-top: 20px; */
    font-size: 35px;
}

.card-container {
    margin-bottom: 35px;
}

.card-container-title {
    display: flex;
    align-items: center;
    flex-direction: row;
    margin-bottom: 10px;
}

.card-container-title-img {
    height: 25px;
    width: 25px;
}

.card-container-title-font {
    color: #73a5d6;
    margin-left: 10px;
    font-size: 22px;
}

.card-container-text {
    font-size: 18px;
}

.card-container-text-key {
    color: #1baef1f8;
}

.card-container-text-key-key {
    color: red;
}

.bottom-font {
    height: 60px;
    font-size: small;
    text-align: center;
    color: gray;
}