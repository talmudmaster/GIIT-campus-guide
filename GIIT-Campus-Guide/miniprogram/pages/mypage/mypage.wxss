page {
    height: 100%;
    background: #80fcdd;
}

.userinfo-avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    background-size: cover;
    background-color: white;
}

/* 登录后 */

.my {
    height: 100%;
    background: linear-gradient(to bottom, #003cff9c, #80fcdd);
}

.center {
    width: 95%;
    /* background: white;
    border-radius: 5px; */
    height: 340rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
}

.center_top {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 300rpx;
    margin: 0 auto;
    background: white;
    border-radius: 5px;
}

.center_top_card {
    display: flex;
    align-items: center;
    width: 80%;
    height: 180rpx;
    border-bottom: 1px solid #2f80ed;
}

.center_img {
    width: 122rpx;
    height: 122rpx;
    border-radius: 50%;
    overflow: hidden;
    /* margin-left: 20px; */
}

.center_img .user_head {
    width: 100%;
    height: 100%;
}

.center_info {
    display: flex;
    flex-direction: column;
    margin-left: 20px;
}


.center_name {
    font-size: 44rpx;
}

.center_welcome {
    font-size: 30rpx;
    color: grey;
}

.center_rank image {
    width: 70rpx;
    height: 70rpx;
}

.gif-wave {
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    background-color: white;
    mix-blend-mode: screen;
    height: 120rpx;
}

.menu {
    width: 95%;
    background: white;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    /* margin-top: 40rpx; */
    margin-bottom: 16rpx;
    padding-bottom: 20rpx;
    border-radius: 5px;
}

.header {
    position: relative;
    height: 370rpx;
