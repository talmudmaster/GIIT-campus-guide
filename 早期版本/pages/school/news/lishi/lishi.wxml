<text style="text-align: center;font-weight:bold;font-size: 18px;">历史新闻</text>
<view wx:for="{{list}}" wx:key="key">
  <view bindtap="news"  data-id="{{item._id}}" style="white:100%;height:190rpx;display: flex; flex-direction:row ; margin-top:7rpx;background:#ffffff">
    <view>
      <view class="aa" style="text-indent:2em;margin-left:16rpx;margin-top:15rpx;width:400rpx;height:120rpx;font-weight:bold">{{item.title}}</view>
  <view style="font-size: 21rpx;margin-left:12rpx;margin-top:20rpx;height:20rpx">于当前时间：{{item.time}}发布</view>
    </view>
    <view>
      <image style="height:170rpx;width:302rpx;margin-top:10rpx;margin-left:20rpx" src="{{item.jpg}}"></image>
    </view>
  </view>
</view>